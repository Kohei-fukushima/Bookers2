<div class="container px-5 px-sm-0">
user: current_user
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
       <%#= image_tag current_user.get_profile_image, size:'100x100' %>
       <% if current_user.profile_image.attached? %>
       <%= image_tag current_user.profile_image, size: "150x150" %>
       <% else %>
        <%= image_tag 'no_image', size: "150x150" %>
       <% end %>
      <table class="table">
       <tbody><tr></tr>
        <tr>
	         <th>name</th>
	         <th><%= current_user.name %></th>
        </tr>
        <tr>
	         <th>introduction</th>
	         <th></th>
        </tr>
       </tbody></table>


<h2>New book</h2>
  <%= form_with model:@book do |f| %>
   <div class="form_group">
    <label for="book title">Title<label>
    <%= f.text_field :title %>
   </div>

    <div class="form_group">
     <label for="book_opinion">Opinion</label>
    <%= f.text_area :body %>
    </div>

    <div class="form_group">
    <%= f.submit 'Create Book' %>
    </div>
  <% end %>
  </div>

    <div class="col-md-8 offset-md-1">
     <h2>Users</h2>
     <table class="table table-hover table-inverse">
     <thead>
      <tr>
       <th></th>
       <th>image</th>
       <th>name</th>
       <th colspan="3"></th>
      </tr>
     </thead>
     <tbody>
      <% @users.each do |user| %>
      <tr>
       <td>
        <%= image_tag user.get_profile_image(150,150) %>
       </td>
       <td>
        <%= user.name %>
       </td>
       <td>
        <%= link_to "Show", user_path(user.id) %>
       </td>
      </tr>
     <% end %>
     </tbody>
     </table>
    </div>
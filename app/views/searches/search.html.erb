<h2>Result index</h2>

<table class="table table-hover table-inverse">
    <% if @range =="User" %>
     <thead>
      <tr>
       <th>image</th>
       <th>name</th>
       <th colspan="3"></th>
      <tbody>
          <% @users.each do |user| %>
            <tr>
                <td>
                <%= image_tag user.get_profile_image(150,150) %>
                </td>
                <td><%= user.name %></td>
            </tr>
          <% end %>
      </tbody>
    <% else %>
    <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
      </tr>
     </thead>
       <tbody>
           <% @books. each do |book| %>
        <tr>
        <td>
         <%= link_to user_path(book.user) do %>
         <%= image_tag book.user.get_profile_image(150,150) %>
         <% end %>
        </td>
        <td>
         <%= link_to book.title, book_path(book.id) %>
        </td>
        <td>
         <%= book.body %>
        </td>
        </tr>
           <% end %>
       </tbody>
    <% end %>
</table>